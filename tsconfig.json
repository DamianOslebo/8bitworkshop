{
    "compilerOptions": {
        "outDir": "./gen",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "noImplicitThis": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "strictNullChecks": false
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./localForage/typings/*.ts"
    ]
}
